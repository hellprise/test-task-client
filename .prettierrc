{
	"trailingComma": "none",
	"tabWidth": 2,
	"printWidth": 120,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@/components/(.*)$",
		"^@/layout/(.*)$",
		"^@/ui/(.*)$",
		"^@/providers/(.*)$",
		"^@/store/(.*)$",
		"^@/features/(.*)$",
		"^@/hooks/(.*)$",
		"^@/graphql/(.*)$",
		"^@/data/(.*)$",
		"^@/api/(.*)$",
		"^@/types/(.*)$",
		"^@/utils/(.*)$",
		"^../(.*)$",
		"^./(.*)$"
	],
	"importOrderSeparation": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
